<%@page import="java.util.Random"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%!
    public int rand() {
        Random rand = new Random();
        int rn = rand.nextInt(10) + 1; // 1 ~ 10 사이의 랜덤 정수
        return rn;
    }

    public void gugudan(int num, JspWriter out) throws IOException {
        for (int i = 1; i <= 9; i++) { // 1 ~ 9까지 반복
            out.print(num + " x " + i + " = " + (num * i) + "<br>"); // 구구단 출력
        }
    }
%>
<%
    int randomNum = rand(); // 랜덤 정수 생성
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
    <h1>랜덤 구구단</h1>
    <% gugudan(randomNum, out); %>
</body>
</html>